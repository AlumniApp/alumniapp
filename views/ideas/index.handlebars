{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
    <form method="post" action="/ideas/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
  </div>
{{else}}
{{#if user.status}}
<p>Congratulations now you can post something</p>
<p>No ideas listed</p>


{{else}}
<h3>your auth req sent to admin wait for approval</h3>
{{/if}}
  
{{/each}}